<ScrollView xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:id="@+id/scrollView"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:background="#4CBB17">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="New Idea"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:gravity="center"
                android:paddingRight="15dp"
                android:textSize="40sp"
                android:id="@+id/toolbar_title"/>

        </android.support.v7.widget.Toolbar>

        <ImageButton
            android:id="@+id/sketch_button"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:src="@drawable/sketch_pad"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Draw a Sketch"
                android:textSize="15dp"
                android:paddingBottom="10dp"
                android:gravity="center"
                android:textStyle="bold"/>

            <EditText
                android:paddingTop="5dp"
                android:id="@+id/post_idea_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:textCursorDrawable="@null"
                android:singleLine="true"
                android:hint="What's the title of your idea?" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Title"
                android:textSize="15dp"
                android:paddingBottom="10dp"
                android:gravity="center"
                android:textStyle="bold"/>

            <EditText
                android:paddingTop="10dp"
                android:id="@+id/post_idea_category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:hint="What kind of idea are you thinking?"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Category"
                android:textSize="15dp"
                android:paddingBottom="10dp"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/post_idea_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="5"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:hint="Give a description of your idea"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Description"
                android:textSize="15dp"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:textStyle="bold"/>

            <Button
                android:text="Post Idea"
                android:textAllCaps="true"
                android:textSize="35dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:id="@+id/postIdea"
                android:layout_width="match_parent"
                android:layout_height= "100dp"
                android:layout_gravity="bottom"
                android:layout_marginBottom="-5dp"
                android:layout_marginRight="-7dp"
                android:layout_marginLeft="-7dp"
                android:background="#4CBB17"/>

        </LinearLayout>

    </FrameLayout>

</ScrollView>